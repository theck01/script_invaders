    #trash-confirmation-menu.confirmation-menu
      .confirmation-message Clear the canvas?
      .confirmation-button-container
        .confirmation-button-container-center-spacer
        button#trash-confirm-yes.dk-flat-button.confirmation-button YES
        .smu-inline-block-spacer
        button#trash-confirm-no.dk-flat-button.confirmation-button NO

    #save-sprite-menu.save-menu
      .save-message Save visible area as...
      .save-menu-spacer
